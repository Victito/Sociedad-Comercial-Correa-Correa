@model Sociedad_Correa_Web.ViewModel.LoginViewModel
@{
    Layout = null; // Sin layout
    ViewData["Title"] = "Inicio de Sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1d3557, #457b9d, #a8dadc);
            font-family: 'Roboto', Arial, sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        .form-control:focus {
            border-color: #457b9d;
            box-shadow: 0 0 5px rgba(69, 123, 157, 0.5);
        }

        .btn-login {
            background-color: #40E0D0;
            color: black;
            text-align: center;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-login:hover {
                background-color: #1d3557;
                color: white;
                transform: translateY(-2px);
            }

        .login-title {
            font-size: 1.8em;
            font-weight: bold;
            color: #1d3557;
            text-align: center;
            margin-bottom: 20px;
        }

        .login-logo {
            display: block;
            margin: 0 auto 20px;
            max-width: 150px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-card mx-auto">
            <!-- Imagen centrada -->
            <img src="~/Img/Logo_Final_cliente-removebg-preview.png" alt="Logo" class="img-fluid login-logo">
            <h2 class="login-title">Inicio de Sesión</h2>
            <form method="post" action="/Account/Login" id="loginForm">
                <div class="mb-3">
                    <label for="nombreUsuario" class="form-label">Nombre de Usuario</label>
                    <input type="text" class="form-control" id="nombreUsuario" name="nombreUsuario"
                           placeholder="Ej: Pedro.silva" required
                           pattern="^[a-zA-Z0-9._-]+$"
                           title="Solo se permiten letras, números, puntos, guiones y guiones bajos.">
                </div>
                <div class="mb-4">
                    <label for="clave" class="form-label">Clave</label>
                    <input type="password" class="form-control" id="clave" name="clave"
                           placeholder="Ej: Pedro123" required
                           pattern="^[a-zA-Z0-9]+$"
                           title="Solo se permiten letras y números.">
                </div>
                <button type="submit" class="btn btn-login w-100">Iniciar Sesión</button>
            </form>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación adicional con JavaScript
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            const usuarioInput = document.getElementById('nombreUsuario').value;
            const claveInput = document.getElementById('clave').value;

            const usuarioRegex = /^[a-zA-Z0-9.-]+$/;
            const claveRegex = /^[a-zA-Z0-9]+$/;

            if (!usuarioRegex.test(usuarioInput) || !claveRegex.test(claveInput)) {
                alert("Los campos contienen caracteres no permitidos.");
                event.preventDefault(); // Evitar el envío del formulario
            }
        });
    </script>
</body>
</html>
