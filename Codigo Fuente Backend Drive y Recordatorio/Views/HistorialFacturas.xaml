<mah:MetroWindow 
    x:Class="SociedadCorreaCorrea.Views.HistorialFacturas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SociedadCorreaCorrea.Views"
    mc:Ignorable="d"
    
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    Title="Principal"
    Width="1300"
    Height="700"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen"
    ShowTitleBar="False"
    ShowCloseButton="False"
    ShowMinButton="False"
    ShowMaxRestoreButton="False"
    Background="Transparent"
    AllowsTransparency="True">

    <Border CornerRadius="10"
            BorderThickness="1">

        <!-- Definición de gradiente del borde -->
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#023E8A" Offset="0" />
                <GradientStop Color="#045DE9" Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Menú de navegación -->
                <ColumnDefinition Width="250" />
                <!-- Sección de contenido -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Navegación -->
            <Border CornerRadius="10,0,0,10" Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="#023E8A" Offset="0" />
                        <GradientStop Color="#045DE9" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal" Height="35" Margin="10,25,0,40">
                        <Image Source="/Resources/Logo_Final_cliente-removebg-preview.png" Height="30" />
                        <TextBlock Text="Farmacia"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <!-- Botones menú -->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#ffffff"
                                 PreviewMouseDown="Inicio_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Inicio" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                             Tag="#ffffff"
                             PreviewMouseDown="IngresarFacturas_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FileDocumentOutline" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Ingresar Facturas" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                             Tag="#ffffff"
                            >
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="History" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Historial de Facturas" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                             Tag="#ffffff"
                             PreviewMouseDown="DatosEstadisticosFacturas_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ChartPieOutline" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Dashboards de Facturas" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="#ffffff">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AccountOutline" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Administrar Trabajadores" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}" Tag="#ffffff" PreviewMouseDown="Servicios_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="BellOutline" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Servicios" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}" Tag="#ffffff" PreviewMouseDown="Drive_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="GoogleDrive" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Drive" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <!-- Sección principal -->
            <Border CornerRadius="0,10,10,0" Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="#045DE9" Offset="0" />
                        <GradientStop Color="#09C6F9" Offset="0.7" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="*" />
                        
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="Ventana_MouseBajo"
                >

                        <!-- Botón Cerrar -->
                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnCerrar_Click">
                            <iconPacks:PackIconMaterial Kind="WindowClose" Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <!-- Botón Maximizar -->
                        <Button x:Name="btnMaximizar"
                                Style="{StaticResource controlButton2}"
                                Tag="{StaticResource color4}"
                                Click="btnMaximizar_Click">
                            <iconPacks:PackIconMaterial Kind="WindowMaximize" Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <!-- Botón Minimizar -->
                        <Button x:Name="btnMinimizar"
                                Style="{StaticResource controlButton2}"
                                Tag="{StaticResource color4}"
                                Click="btnMinimizar_Click">
                            <iconPacks:PackIconMaterial Kind="WindowMinimize" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="History"
                                                        Height="20" 
                                                        Width="20" 
                                                        Foreground="{StaticResource titleColor2}" 
                                                        Margin="35,0,10,0"/>
                            <TextBlock Text="Historial de Facturas"
                                       Foreground="{StaticResource titleColor2}"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>

                        </StackPanel>

                        <StackPanel Grid.Column="1"
Orientation="Horizontal"
FlowDirection="RightToLeft"
VerticalAlignment="Center"
Margin="0,0,10,0">

                            <!-- ComboBox personalizado para mostrar solo una opción: "Cerrar sesión" -->
                            <ComboBox Width="28" 
  Background="Transparent"
  BorderBrush="Transparent"
  VerticalAlignment="Center"
  Foreground="{StaticResource titleColor2}">
                                <ComboBox.Template>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <!-- Aparece la flecha como en un botón -->
                                            <ToggleButton x:Name="ToggleButton"
                      Focusable="False"
                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                      Background="Transparent"
                      BorderBrush="Transparent"
                                              
                                              >
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial  Kind="ChevronDown" 
                                            Height="12" 
                                            Width="12" 
                                            Style="{StaticResource iconButtonIcon}"
                                            Foreground="{StaticResource titleColor2}"/>
                                                </StackPanel>
                                            </ToggleButton>
                                            <Popup x:Name="Popup"
               Placement="Bottom"
               IsOpen="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
               AllowsTransparency="True"
               Focusable="False"
               PopupAnimation="Slide">
                                                <Border Background="White" 
                    CornerRadius="4"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                                                    <StackPanel>
                                                        <TextBlock Text="Cerrar sesión"
                               Padding="10"
                               FontSize="12"
                               Cursor="Hand"
                               MouseLeftButtonUp="CerrarSesion_Click"
                                                       Foreground="Black"/>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </ComboBox.Template>
                            </ComboBox>

                            <!-- Nombre de usuario y círculo de perfil -->
                            <TextBlock Text="username"
   Foreground="{StaticResource titleColor2}"
   FontFamily="Montserrat"
   FontSize="12"
   VerticalAlignment="Center"/>
                            <Ellipse Height="35" Width="35"
 Stroke="#ffffff"
 StrokeThickness="2"
 Margin="10,0,10,0"/>
                        </StackPanel>
                    </Grid>

                    <ContentControl Grid.Row="2" Margin="20">

                        <StackPanel>
                            <!-- Controles para el filtrado -->
                            <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Filtro por Razón Social -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                                        <TextBlock Text="Filtrar por Proveedor"
                                               Style="{StaticResource TextGeneral}" />
                                        <TextBox x:Name="FiltroRazonSocial" 
                                                 Width="200" 
                                                 Margin="0,5,0,5"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding FiltroRazonSocial, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource RoundedTextBox}"/>
                                    </StackPanel>

                                    <!-- Filtro por Estado -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,10,0">
                                        <TextBlock Text="Filtrar por Estado" 
                                                   Style="{StaticResource TextGeneral}" 
                                                   />
                                        <ComboBox x:Name="FiltroEstado" 
                                                  Width="200" 
                                                  Margin="0,5,0,5"
                                                  Style="{StaticResource RoundedComboBox}"
                                                  SelectedItem="{Binding FiltroEstado, 
                                            UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Left"
                                                  >
                                            <ComboBoxItem Content="Pendiente" />
                                            <ComboBoxItem Content="Cancelada" />
                                            <ComboBoxItem Content="Pagada" />
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <Grid Width="auto" Height="400">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="auto" Width="auto">
                                <DataGrid x:Name="facturasDataGrid" 
                                          AutoGenerateColumns="False" 
                                          ItemsSource="{Binding InformacionFacturaFiltrada}" 
                                          CanUserAddRows="False" 
                                          CanUserDeleteRows="False" 
                                          HeadersVisibility="Column" 
                                          VerticalAlignment="Stretch" 
                                          HorizontalAlignment="Stretch" 
                                          IsReadOnly="False" 
                                          CanUserResizeColumns="True" 
                                          Margin="0" Padding="5" 
                                          SelectionMode="Extended"   
                                          SelectionUnit="FullRow"
                                          Grid.Row="1"
>
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="C" CanUserResize="False" Width="auto" ElementStyle="{StaticResource CheckBoxStyle1}">
                                            <DataGridCheckBoxColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                                                </DataTemplate>
                                            </DataGridCheckBoxColumn.HeaderTemplate>
                                        </DataGridCheckBoxColumn>
                                            <DataGridTextColumn Header="Id Sucursal" IsReadOnly="True"  ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.IdSucursal}" />
                                            <DataGridTextColumn Header="Numero de Factura" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.NumeroFactura}" />
                                            <DataGridTextColumn Header="RUT Vendedor" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.RutVendedor}" />
                                            <DataGridTextColumn Header="Giro Vendedor" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.GiroVendedor}" />
                                            <DataGridTextColumn Header="Proveedor" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.RazonSocialVendedor}" />
                                            <DataGridTextColumn Header="Razón Social" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.RazonSocial}" />
                                            <DataGridTextColumn Header="RUT Cliente" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.RutEmisor}" />
                                            <DataGridTextColumn Header="Giro del Cliente" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Giro}" />
                                            <DataGridTextColumn Header="Dirección" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Direccion}" />
                                            <DataGridTextColumn Header="Comuna" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Comuna}" />
                                            <DataGridTextColumn Header="Ciudad" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Ciudad}" />
                                            <DataGridTextColumn Header="Entregar En" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.EntregarEn}" />
                                            <DataGridTextColumn Header="Fecha Emisión" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.FechaEmision}" />
                                            <DataGridTextColumn Header="Fecha Vencimiento" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.FechaVencimiento}" />
                                            <DataGridTextColumn Header="Cobrador" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Cobrador}" />
                                            <DataGridTextColumn Header="Nota de Venta" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.NotaVenta}" />
                                            <DataGridTextColumn Header="Orden de Compra" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.OrdenCompra}" />
                                            <DataGridTextColumn Header="Condiciones" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Condiciones}" />
                                            <DataGridTextColumn Header="Guía de Despacho" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.GuiaDespacho}" />
                                            <DataGridTextColumn Header="Cantidad" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Cantidad}" />
                                            <DataGridTextColumn Header="Total" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Total}" />
                                            <DataGridTextColumn Header="Estado" IsReadOnly="True" ElementStyle="{StaticResource CenteredTextStyle}" Binding="{Binding Factura.Estado}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                </ScrollViewer>
                            </Grid>


                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,10">
                                <Button Content="Eliminar Facturas Seleccionadas" 
                                        Click="EliminarFacturasSeleccionadas_Click" 
                                        Style="{StaticResource StyleButtonFormDelete}"
                                        Margin="10,0,0,0"/>
                                <!-- Espacio entre botones -->
                                <Button Content="Actualizar Factura Seleccionada" 
                                        Click="ActualizarFacturaSeleccionada_Click" 
                                        
                                        Style="{StaticResource StyleButtonForm}"
                                        Margin="10,0,0,0"/>
                                <Button Content="Ver productos de Factura" 
                                        Click="ProductosFacturaSeleccionada_Click" 
                                        
                                        Style="{StaticResource StyleButtonForm}"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                            
                </StackPanel>
                    </ContentControl>
                </Grid>
                
            </Border>
        </Grid>
    </Border>
</mah:MetroWindow>
