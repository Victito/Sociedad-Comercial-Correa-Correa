@model List<Sociedad_Correa_Web.Models.TareasDiaria>
@{

}
<link href="~/css/TareasD.css" rel="stylesheet" />

<div class="container">
    <div class="card mx-auto" style="max-width: 900px; padding-top:;">
        <div class="card-header text-center" style="background-color: #457b9d; color: white; border-radius:10px;">
            <h4>Lista de Tareas</h4>
        </div>
        <div class="card-body">
            <!-- Tabla Responsiva -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered" border="1" cellpadding="10" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre de Tarea</th>
                            <th>Descripción</th>
                            <th>Fecha</th>
                            <th>Hora Inicio</th>
                            <th>Hora Término</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tareas in Model)
                        {
                            <tr>
                                <td>@tareas.NombreTarea</td>
                                <td>@tareas.DescripcionTarea</td>
                                <td>@tareas.FechaTarea.ToShortDateString()</td>
                                <td>@tareas.HoraInicioTarea</td>
                                <td>@tareas.HoraTerminoTarea</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-center">
            <form method="get" asp-action="Back">
                <button type="submit" class="btn btn-custom btn-secondary">Volver</button>
            </form>
        </div>
    </div>
</div>

<!-- Footer -->


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

